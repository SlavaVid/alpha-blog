<div class="container">

  <div class="d-flex justify-content-center">
    <div class="col">
    <%= render 'shared/errors', obj: @article %>
    <%= form_with(model: @article, class:"shadow-lg p-3 ", local:true ) do |f| %>
        <div class="form-group row text-dark ">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col"> 
            <%= f.text_field :title, class:"form-control shadow rounded",placeholder: "Title of article"  %></br>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class:"col-2 col-form-label" %>
          <div class="col">
            <%= f.text_area :description, rows: 10 , class:"form-control shadow rounded",placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group d-flex justify-content-center mt-3 ">
          <%= f.submit class: "btn btn-outline-dark btn-lg " %>
        </div>

    <% end %>

    <div class="mb-3">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path,class:"text-dark d-flex justify-content-center mt-4"%>
      </div>

    </div>
  </div>
</div>  